                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:backgroundTint="#D6D7D7"
                android:letterSpacing="0.14"
                android:onClick="escribirUno"
                android:text="@string/txtView_Uno"
                android:textColor="#000000"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button28"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:backgroundTint="#D6D7D7"
                android:letterSpacing="0.14"
                android:onClick="escribirDos"
                android:text="@string/txtView_Dos"
                android:textColor="#000000"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button26"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:backgroundTint="#D6D7D7"
                android:letterSpacing="0.14"
                android:onClick="escribirTres"
                android:text="@string/txtView_Tres"
                android:textColor="#000000"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:backgroundTint="#D6D7D7"
                android:letterSpacing="0.14"
                android:onClick="sumar"
                android:text="@string/txtView_Mas"
                android:textColor="#000000"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
