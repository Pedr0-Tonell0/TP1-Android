            <Button
                android:id="@+id/button39"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:backgroundTint="#D6D7D7"
                android:letterSpacing="0.14"
